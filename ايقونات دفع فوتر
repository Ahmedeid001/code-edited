اسفل كلاس ايقونات



<style>
.km-payment-icons img.km-pay-icon {
    width: 45px;
    height: auto;
    object-fit: contain;
    opacity: 0.9;
    transition: opacity .2s ease;
}

.km-payment-icons img.km-pay-icon:hover {
    opacity: 1;
}

</style>
<script>
document.addEventListener("DOMContentLoaded", function () {

    // وظيفة انتظار عنصر يظهر في الصفحة
    function waitFor(selector, callback) {
        const checkExist = setInterval(() => {
            const element = document.querySelector(selector);
            if (element) {
                clearInterval(checkExist);
                callback(element);
            }
        }, 200);
    }

    // إضافة ايقونات الدفع بعد بلوك السوشيال 
    waitFor(".flex.flex-col.gap-6.mt-6", function (socialBlock) {

        // لو اتحط قبل كده — ميتكررش
        if (document.querySelector(".km-payment-icons")) return;

        const wrapper = document.createElement("div");
        wrapper.className = "km-payment-icons";
        wrapper.style.display = "flex";
        wrapper.style.gap = "12px";
        wrapper.style.marginTop = "15px";
        wrapper.style.flexWrap = "wrap";

        wrapper.innerHTML = `
            <img src="https://white.a.bigcontent.io/v1/static/mastercard_1" alt="Mastercard" class="km-pay-icon">
            <img src="https://white.a.bigcontent.io/v1/static/visa_1" alt="Visa" class="km-pay-icon">
            <img src="https://white.a.bigcontent.io/v1/static/payPal_2" alt="PayPal" class="km-pay-icon">
            <img src="https://white.a.bigcontent.io/v1/static/applePay" alt="Apple Pay" class="km-pay-icon">
            <img src="https://white.a.bigcontent.io/v1/static/google-pay_1" alt="Google Pay" class="km-pay-icon">
        `;

        // الحقن بعد السوشيال بلوك مباشرة
        socialBlock.insertAdjacentElement("afterend", wrapper);
    });

});

</script>
