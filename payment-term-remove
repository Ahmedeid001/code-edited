    display: flex;
    gap: 18px;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
}

.km-payment-icons img {
    height: 28px;
    width: auto;
    opacity: 0.85;
    transition: opacity 0.2s ease;
}
.km-payment-icons img:hover {
    opacity: 1;
}


/* ====== Child 2: Legal Links ====== */

.km-legal-links {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
    justify-content: center;
