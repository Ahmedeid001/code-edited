  <script>
  document.addEventListener("DOMContentLoaded", function () {
  
      function isCheckoutPage() {
          return window.location.pathname.includes("checkout") ||
                 document.querySelector(".checkout_container");
      }
  
      function toggleHeaderForCheckout() {
          const isCheckout = isCheckoutPage();
  
          const bar = document.querySelector("#announcement-bar");
          const menu = document.querySelector('img[alt="Menu"]')?.closest("button");
          const search = document.querySelector('a[href="/search"]');
          const desktopNav = document.querySelector(".lg\\:block");
          const rightSide = document.querySelector('.ms-auto.flex.items-center.flex-1');
  
          // Ø§Ù„ÙÙˆØªØ±
          const fullFooter = document.querySelector("footer.bg-white.bg-skin-primary");
  
          // === ØªØ­Ø¯ÙŠØ¯ Ø²Ø±Ø§Ø± Ø§Ù„Ø³Ù„Ø© ===
          let cartButton = null;
          if (rightSide) {
              rightSide.querySelectorAll("button,a").forEach(el => {
                  const badge = el.querySelector("div span"); 
                  if (badge && /^(\d+)$/.test(badge.innerText.trim())) {
                      cartButton = el;
                  }
              });
          }
  
          // â— Ø¯Ù„ÙˆÙ‚ØªÙŠ Ù…Ø´ Ø¹Ø§ÙŠØ²ÙŠÙ† Ù†Ø³ØªØ«Ù†ÙŠ Ø²Ø±Ø§Ø± Ø§Ù„Ø³Ù„Ø© â†’ ÙŠØªØ´Ø§Ù„ Ø²ÙŠ Ø¨Ø§Ù‚ÙŠ Ø§Ù„Ø¹Ù†Ø§ØµØ±
          // Ù„Ø°Ù„Ùƒ Ù…Ø´ Ù‡Ù†Ø³ØªØ®Ø¯Ù… cartButton ÙÙŠ Ø§Ù„Ø§Ø³ØªØ«Ù†Ø§Ø¡
  
          // Ù„Ùˆ Ù„Ø³Ù‡ Ø²Ø±Ø§Ø± Ø§Ù„Ø³Ù„Ø© Ù…Ø­Ù…Ù‘Ù„Ø´ â†’ Ù…ØªØ®ÙÙŠØ´ Ø§Ù„Ø¹Ù†Ø§ØµØ±
          if (isCheckout && !cartButton) {
              return;
          }
  
          if (isCheckout) {
              if (bar) bar.style.display = "none";
              if (menu) menu.style.display = "none";
              if (search) search.style.display = "none";
              if (desktopNav) desktopNav.style.display = "none";
  
              if (rightSide) {
                  rightSide.querySelectorAll("a,button").forEach(el => {
                      el.style.display = "none";   // ğŸ”¥ Ø´ÙŠÙ„ ÙƒÙ„ Ø­Ø§Ø¬Ø© Ø¨Ù…Ø§ ÙÙŠÙ‡Ø§ Ø§Ù„Ø³Ù„Ø©
                  });
              }
  
              // Ø¥Ø®ÙØ§Ø¡ Ø§Ù„ÙÙˆØªØ± Ø¨Ø§Ù„ÙƒØ§Ù…Ù„
              if (fullFooter) fullFooter.style.display = "none";
          }
  
          else {
              // Ø±Ø¬Ù‘Ø¹ ÙƒÙ„ Ø­Ø§Ø¬Ø© Ø²ÙŠ Ù…Ø§ ÙƒØ§Ù†Øª
              if (bar) bar.style.display = "";
              if (menu) menu.style.display = "";
              if (search) search.style.display = "";
              if (desktopNav) desktopNav.style.display = "";
  
              if (rightSide) {
                  rightSide.querySelectorAll("a,button").forEach(el => {
                      el.style.display = "";
                  });
              }
  
              if (fullFooter) fullFooter.style.display = "";
          }
      }
  
      // Run on load
      setTimeout(toggleHeaderForCheckout, 300);
  
      // Observe SPA
      const observer = new MutationObserver(() => {
          toggleHeaderForCheckout();
      });
      observer.observe(document.body, { childList: true, subtree: true });
  
  });
  </script>
