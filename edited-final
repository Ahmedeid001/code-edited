  <script>
function waitForHeader(callback) {
    const check = setInterval(() => {
        const header = document.querySelector("header.default_header");
        if (header) {
            clearInterval(check);
            callback(header);
        }
    }, 200);
}

document.addEventListener("DOMContentLoaded", function () {

    waitForHeader(function (header) {

        const messages = [
            "Choose colors & sizes you love",
            "Handmade with love in Egypt",
            "Free Shipping over 8000LE"
        ];

        /*========================
           Ø¥Ù†Ø´Ø§Ø¡ Ø§Ù„Ù€ Bar Ø¨Ø´ÙƒÙ„ Ù…Ù†Ø³Ù‚
        ==========================*/
        const bar = document.createElement("div");
        bar.id = "announcement-bar";
        bar.style = `
            --bg: 142 135 129;
            --text: 255 255 255;
            background: rgb(194 162 134);
            color: rgb(var(--text));
            padding: 10px 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 25px;
            font-size: 15px;
            font-weight: 600;
            font-family: 'Libre Baskerville', serif;
            position: relative;
            overflow: hidden;
            min-height: 40px;
        `;

        /* Ø²Ø±Ø§Ø± Previous */
        const btnPrev = document.createElement("button");
        btnPrev.innerHTML = "â®";
        btnPrev.style = `
            background: transparent;
            color: rgb(var(--text));
            border: none;
            cursor: pointer;
            font-size: 16px;
            padding: 4px 10px;
            opacity: 0.8;
        `;
        btnPrev.className = "ann-btn";

        /* Ø²Ø±Ø§Ø± Next */
        const btnNext = document.createElement("button");
        btnNext.innerHTML = "â¯";
        btnNext.style = `
            background: transparent;
            color: rgb(var(--text));
            border: none;
            cursor: pointer;
            font-size: 16px;
            padding: 4px 10px;
            opacity: 0.8;
        `;
        btnNext.className = "ann-btn";

        /* Ø§Ù„ÙƒÙˆÙ†ØªÙŠÙ†Ø± */
        const wrapper = document.createElement("div");
        wrapper.className = "ann-wrapper";
        wrapper.style = `
            position: relative;
            height: 20px;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            min-width: 250px;
        `;

        /* Ø§Ù„Ø´Ø±Ø§Ø¦Ø­ */
        const slides = messages.map((msg, index) => {
            const s = document.createElement("div");
            s.className = "ann-slide";
            s.style = `
                position: absolute;
                opacity: 0;
                transform: translateY(10px);
                white-space: nowrap;
                transition: opacity .4s ease, transform .4s ease;
            `;
            s.textContent = msg;

            if (index === 0) {
                s.style.opacity = "1";
                s.style.transform = "translateY(0)";
            }

            wrapper.appendChild(s);
            return s;
        });

        bar.appendChild(btnPrev);
        bar.appendChild(wrapper);
        bar.appendChild(btnNext);

        header.parentNode.insertBefore(bar, header);

        /*========================
             Ø§Ù„ÙˆØ¸Ø§Ø¦Ù + Auto-play
        ==========================*/
        let index = 0;
        let interval;

        function showSlide(i) {
            slides.forEach(s => {
                s.style.opacity = "0";
                s.style.transform = "translateY(10px)";
            });
            slides[i].style.opacity = "1";
            slides[i].style.transform = "translateY(0)";
        }

        function nextSlide() {
            index = (index + 1) % slides.length;
            showSlide(index);
        }

        function prevSlide() {
            index = (index - 1 + slides.length) % slides.length;
            showSlide(index);
        }

        btnNext.onclick = () => {
            nextSlide();
            restartAuto();
        };

        btnPrev.onclick = () => {
            prevSlide();
            restartAuto();
        };

        function startAuto() {
            interval = setInterval(nextSlide, 3000);
        }
        function restartAuto() {
            clearInterval(interval);
            startAuto();
        }

        startAuto();
    });
});
</script>

  
  
