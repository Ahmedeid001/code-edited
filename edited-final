  <script>
  document.addEventListener("DOMContentLoaded", function () {
  
      function getRealSwiper(swiperElem) {
          return swiperElem.swiper || swiperElem.__swiper__ || null;
      }
  
      function initThumbs() {
          const swiperElem = document.querySelector(".swiper");
          if (!swiperElem) return;
  
          const swiper = getRealSwiper(swiperElem);
  
          // Ù„Ùˆ Ø§Ù„Ø³Ù„Ø§ÙŠØ¯Ø± Ù„Ø³Ù‡ Ù…Ø§ Ø§Ø´ØªØºÙ„Ø´ â†’ Ø§Ø³ØªÙ†Ù‰
          if (!swiper) {
              setTimeout(initThumbs, 200);
              return;
          }
  
          const thumbs = document.querySelectorAll(".product-thumbs img");
          if (!thumbs.length) return;
  
          // ğŸ”¥ Ø§Ù„Ø¶ØºØ· Ø¹Ù„Ù‰ Ø§Ù„Ø«Ø§Ù…Ø¨Ù†ÙŠÙ„ â†’ ÙŠØ±ÙˆØ­ Ù„Ù„Ø³Ù„Ø§ÙŠØ¯ Ø§Ù„Ø­Ù‚ÙŠÙ‚ÙŠ
          thumbs.forEach((thumb) => {
              thumb.addEventListener("click", () => {
                  const index = parseInt(thumb.dataset.index);
  
                  swiper.slideToLoop(index, 300);
  
                  // ØªØ­Ø¯ÙŠØ« Active
                  thumbs.forEach(t => t.classList.remove("active"));
                  thumb.classList.add("active");
              });
          });
  
          // ğŸ”¥ Ù„Ù…Ø§ Ø§Ù„Ø³Ù„Ø§ÙŠØ¯Ø± ÙŠØªØ­Ø±Ùƒ â†’ ÙØ¹Ù‘Ù„ Ø§Ù„Ø«Ø§Ù…Ø¨Ù†ÙŠÙ„
          swiper.on("slideChange", () => {
              const i = swiper.realIndex;
              thumbs.forEach(t => t.classList.remove("active"));
              const active = document.querySelector(`.product-thumbs img[data-index='${i}']`);
              if (active) active.classList.add("active");
          });
      }
  
      // Ø´ØºÙ„ Ø¨Ø¹Ø¯ Ø§Ù„ØªØ­Ù…ÙŠÙ„
      setTimeout(initThumbs, 600);
  
      // Ø±Ø§Ù‚Ø¨ ØªØºÙŠÙŠØ±Ø§Øª Ø§Ù„ØµÙØ­Ø© (SPA)
      const obs = new MutationObserver(() => initThumbs());
      obs.observe(document.body, { childList: true, subtree: true });
  
  });
  </script>
  
  
  
  <script>
  document.addEventListener("DOMContentLoaded", function () {
  
      function updateButton() {
          const btn = document.querySelector(
              "button[type='submit']"
          );
          if (btn && btn.textContent.trim() !== "Send") {
              btn.textContent = "Send";
          }
          return btn;
      }
  
      // Ù…Ø­Ø§ÙˆÙ„Ø© Ø£ÙˆÙ„Ù‰ Ø¨Ø¹Ø¯ Ø§Ù„ØªØ­Ù…ÙŠÙ„
      let btn = updateButton();
  
      // Ù„Ùˆ Ø§Ù„Ø²Ø±Ø§Ø± Ø§ØªØºÙŠØ± ØªØ§Ù†ÙŠ â€” Ù†Ø±Ø§Ù‚Ø¨Ù‡ ÙˆÙ†Ø¹ÙŠØ¯ Ø§Ø³Ù…Ù‡
      const observer = new MutationObserver(() => updateButton());
  
      // Ù†Ø³ØªÙ†Ù‰ Ù„Ø­Ø¯ Ù…Ø§ ÙŠØ¸Ù‡Ø± ÙØ¹Ù„ÙŠÙ‹Ø§
      const wait = setInterval(() => {
          btn = updateButton();
          if (btn) {
              observer.observe(btn, { childList: true, characterData: true, subtree: true });
              clearInterval(wait);
          }
      }, 200);
  });
  </script>
  
