  <script>
  document.addEventListener("DOMContentLoaded", function () {
  
      function initDisclosureIcons() {
          const buttons = document.querySelectorAll(
              'button[id^="headlessui-disclosure-button"]'
          );
  
          buttons.forEach(btn => {
  
              // Ø¥Ø²Ø§Ù„Ø© Ø£ÙŠ SVG Ù…ÙˆØ¬ÙˆØ¯
              const oldIcon = btn.querySelector("svg");
              if (oldIcon) oldIcon.remove();
  
              // Ø¥Ø¶Ø§ÙØ© Ø§Ù„ØµÙˆØ±Ø©
              const icon = document.createElement("img");
              icon.style.width = "17px";
              icon.style.height = "17px";
              icon.style.transition = "0.2s ease";
              icon.style.marginLeft = "auto";
              icon.style.filter = "invert(1) brightness(200%)";
  
  
              // ØªØ¹ÙŠÙŠÙ† Ø§Ù„Ø£ÙŠÙ‚ÙˆÙ†Ø© Ø­Ø³Ø¨ Ø§Ù„ÙˆØ¶Ø¹ Ø§Ù„Ø­Ø§Ù„ÙŠ
              const setIcon = () => {
                  const isOpen = btn.getAttribute("aria-expanded") === "true";
                  icon.src = isOpen
                      ? "https://files.easy-orders.net/1764831807459385720.png"   // minus
                      : "https://files.easy-orders.net/1764831726838562859.png"; // plus
              };
  
              setIcon(); // Ø£ÙˆÙ„ ØªØ­Ù…ÙŠÙ„
  
              btn.appendChild(icon);
  
              // Ø¹Ù†Ø¯ Ø§Ù„Ø¶ØºØ· â€“ Ø§Ù†ØªØ¸Ø± ØªØ­Ø¯ÙŠØ« Headless UI Ø«Ù… ØºÙŠÙ‘Ø± Ø§Ù„ØµÙˆØ±Ø©
              btn.addEventListener("click", () => {
                  setTimeout(setIcon, 50);
              });
          });
      }
  
      setTimeout(initDisclosureIcons, 600);
  });
  </script>
  
  
  <script>
  document.addEventListener("DOMContentLoaded", function () {
  
      function waitFor(selector, callback) {
          const interval = setInterval(() => {
              const el = document.querySelector(selector);
              if (el) {
                  clearInterval(interval);
                  callback(el);
              }
          }, 200);
      }
  
      /* ======================================================
         â­ 0) Ø¶Ø¨Ø· Ø§Ù„Ù‡ÙŠÙƒÙ„ Ø§Ù„Ø¹Ø§Ù… Ù„Ù„Ù‡ÙŠØ¯Ø± Ù…Ø«Ù„ Shopify Dawn
         ====================================================== */
      waitFor("header.default_header .flex.items-center", function (headerRow) {
  
          /* Ø¬Ø¹Ù„Ù‡ Grid Ø¨Ù†Ø¸Ø§Ù… Dawn */
          headerRow.style.display = "grid";
          headerRow.style.gridTemplateColumns = "1fr auto 1fr";
          headerRow.style.alignItems = "center";
          headerRow.style.width = "100%";
  
          console.log("âœ” Header converted to Shopify Dawn layout");
      });
  
      /* ======================================================
         â­ 1) MENU BUTTON ICON (Right side) â€” Shopify style
         ====================================================== */
      waitFor("button.bg-white.py-2.lg\\:hidden", function (menuBtn) {
  
          /* Ø¥Ø²Ø§Ù„Ø© Ø§Ù„Ù‚Ø¯ÙŠÙ… */
          menuBtn.querySelectorAll("svg, img").forEach(x => x.remove());
  
          /* Ø¥Ø¶Ø§ÙØ© Ø§Ù„Ø£ÙŠÙ‚ÙˆÙ†Ø© */
          const img = document.createElement("img");
          img.src = "https://files.easy-orders.net/1764834736261680665.png";
          img.style.width = "23px";
          img.style.height = "23px";
          img.alt = "Menu";
  
          /* Ù†ÙØ³ Ù…Ø³Ø§ÙØ© Dawn */
          menuBtn.style.justifySelf = "start";
          menuBtn.style.marginLeft = "23px";
  
          menuBtn.appendChild(img);
      });
  
      /* ======================================================
         â­ 2) SEARCH ICON â€” Shopify Dawn size & left section
         ====================================================== */
      waitFor("a[href='/search']", function (searchParent) {
  
          /* Ø­Ø°Ù Ø£ÙŠÙ‚ÙˆÙ†Ø§Øª */
          searchParent.querySelectorAll("svg, img").forEach(x => x.remove());
  
          const img = document.createElement("img");
          img.src = "https://files.easy-orders.net/1764834183466007100.png";
          img.style.width = "25px";
          img.style.height = "25px";
          img.alt = "Search";
  
          searchParent.style.marginRight = "-3px"; // Dawn spacing
  
          searchParent.insertBefore(img, searchParent.firstChild);
      });
  
      /* ======================================================
         â­ 3) CART ICON â€” Shopify Dawn size & left alignment
         ====================================================== */
      waitFor("button.group.relative.flex.items-center", function (cartBtn) {
  
          const svg = cartBtn.querySelector("svg");
          if (svg) svg.remove();
  
          const img = document.createElement("img");
          img.src = "https://files.easy-orders.net/1764833875337858398.png";
          img.style.width = "22px";
          img.style.height = "22px";
          img.alt = "Cart";
  
          cartBtn.style.marginRight = "20px"; // Dawn spacing
  
          cartBtn.insertBefore(img, cartBtn.firstChild);
      });
  
      /* ======================================================
         â­ 4) Ø¶Ø¨Ø· Ù…ÙƒØ§Ù† Ø£ÙŠÙ‚ÙˆÙ†Ø§Øª (Search + Cart)
         ====================================================== */
      waitFor(".ms-auto.flex.items-center", function (iconsWrapper) {
  
          iconsWrapper.style.justifySelf = "end";
          iconsWrapper.style.display = "flex";
          iconsWrapper.style.alignItems = "center";
          iconsWrapper.style.gap = "15px"; // Ù†ÙØ³ Dawn
      });
  
      /* ======================================================
         â­ 5) Ø¶Ø¨Ø· Ù…ÙƒØ§Ù† Ø§Ù„Ù„ÙˆØ¬Ùˆ â€” ÙˆØ³Ø· Ø§Ù„ØµÙØ­Ø© Ø¨Ø§Ù„Ø¸Ø¨Ø·
         ====================================================== */
      waitFor(".default_header_logo", function (logoArea) {
          logoArea.style.justifySelf = "center";
      });
  
  });
  </script>
