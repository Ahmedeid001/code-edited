<script>
document.addEventListener("DOMContentLoaded", function () {

  function initAccordion() {
    const container = document.querySelector(".product_tabs_elegance_container");
    if (!container) return;

    // Ù„Ùˆ Ø§ØªØ¹Ù…Ù„ Ù‚Ø¨Ù„ ÙƒØ¯Ù‡ â€” Ø®Ù„Ø§Øµ
    if (document.querySelector(".km-accordion")) return;

    const tabs = container.querySelector('[role="tablist"]');
    const panelsWrapper = tabs?.nextElementSibling;
    if (!tabs || !panelsWrapper) return;

    const tabBtns = tabs.querySelectorAll("[role='tab']");
    const panelSpans = panelsWrapper.querySelectorAll("[role='tabpanel']");

    // Ù†Ø®ÙÙŠ Ø§Ù„ØªØ§Ø¨-Ø³ÙŠØ³ØªÙ… Ø§Ù„Ø£ØµÙ„ÙŠ
    tabs.style.display = "none";
    panelsWrapper.style.display = "none";

    // Ø¥Ù†Ø´Ø§Ø¡ Ø§Ù„Ø£ÙƒÙˆØ±Ø¯ÙŠÙˆÙ†
    const accordion = document.createElement("div");
    accordion.className = "km-accordion";

    tabBtns.forEach((btn, index) => {
      const title = btn.textContent.trim();
      const panel = panelSpans[index];

      if (!panel) return;

      const clonedContent = panel.innerHTML; // â† Ù†Ù†Ø³Ø® Ø§Ù„Ù…Ø­ØªÙˆÙ‰ ÙÙ‚Ø· Ø¨Ø¯ÙˆÙ† ØªØ­Ø±ÙŠÙƒ Ø§Ù„Ø¹Ù†ØµØ±

      const item = document.createElement("div");
      item.className = "km-acc-item";

      const header = document.createElement("div");
      header.className = "km-acc-header";
      header.innerHTML = `
        <span>${title}</span>
        <svg class="km-acc-icon" width="20" height="20" viewBox="0 0 20 20">
          <path d="m5 8 5 5 5-5" stroke="#111" stroke-width="1" stroke-linecap="round"/>
        </svg>
      `;

      const panelWrap = document.createElement("div");
      panelWrap.className = "km-acc-panel";

      const inner = document.createElement("div");
      inner.className = "km-acc-panel-inner";
      inner.innerHTML = clonedContent;

      panelWrap.appendChild(inner);

      header.addEventListener("click", () => {
        const open = item.classList.contains("open");
        item.classList.toggle("open");

        if (open) {
          panelWrap.style.maxHeight = "0px";
        } else {
          panelWrap.style.maxHeight = inner.scrollHeight + "px";
        }
      });

      item.appendChild(header);
      item.appendChild(panelWrap);
      accordion.appendChild(item);
    });

    container.appendChild(accordion);
  }

  setTimeout(initAccordion, 600);
  new MutationObserver(initAccordion).observe(document.body, { childList: true, subtree: true });

});
</script>

