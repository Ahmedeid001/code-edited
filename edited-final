<script>
document.addEventListener("DOMContentLoaded", function () {

    /* ===============================
       1) ØªØ­Ø±ÙŠÙƒ Ø§Ù„Ù€ Accordion ÙÙˆÙ‚ Ø§Ù„Ø£Ø²Ø±Ø§Ø±
       =============================== */
    function relocateAccordion() {
        const accordion = document.querySelector(".km-accordion");
        const buttonsSection = document.querySelector(".mt-5.flex.flex-col");

        if (!accordion || !buttonsSection) return;

        // Ù„Ùˆ Ø§ØªØ­Ø±Ùƒ Ù‚Ø¨Ù„ ÙƒØ¯Ù‡
        if (accordion.dataset.moved === "true") return;

        // Ù†Ù†Ù‚Ù„Ù‡ ÙÙˆÙ‚ Ø§Ù„Ø£Ø²Ø±Ø§Ø±
        buttonsSection.parentNode.insertBefore(accordion, buttonsSection);
        accordion.dataset.moved = "true";

        console.log("âœ” Accordion moved above buttons successfully.");
    }

    /* ===============================
       2) Ø¥ØºÙ„Ø§Ù‚ ÙƒÙ„ Panels Ø¹Ù†Ø¯ ØªØ­Ù…ÙŠÙ„ Ø§Ù„ØµÙØ­Ø©
       =============================== */
    function closeAccordionsOnLoad() {
        const panels = document.querySelectorAll(".km-acc-panel");

        panels.forEach(panel => {
            panel.style.maxHeight = "0px";
            panel.classList.remove("open");

            // Ø¥Ø²Ø§Ù„Ø© Ø³ØªØ§ÙŠÙ„Ø§Øª HeadlessUI Ø§Ù„ØªØ®Ø±ÙŠØ¨ÙŠØ©
            panel.style.position = "";
            panel.style.height = "";
            panel.style.overflow = "hidden";
        });
    }

    /* ===============================
       3) Ø¥Ø¶Ø§ÙØ© Ø§Ù„Ù„ÙˆØ¬Ùˆ Ø¨Ø¬Ø§Ù†Ø¨ Description
       =============================== */
    function addLogoToDescription() {
        const firstHeader = document.querySelector(".km-acc-item .km-acc-header span");
        if (!firstHeader) return;

        // Ù„Ùˆ Ø§Ù„Ù„ÙˆØ¬Ùˆ Ù…ÙˆØ¬ÙˆØ¯ Ù…Ø³Ø¨Ù‚Ù‹Ø§
        if (firstHeader.querySelector(".km-acc-logo")) return;

        const logo = document.createElement("img");
        logo.src = "https://files.easy-orders.net/1765148390087803457.png";
        logo.className = "km-acc-logo";
        firstHeader.prepend(logo);
    }

    /* ===============================
       ØªØ´ØºÙŠÙ„ ÙƒÙ„ Ø§Ù„ÙˆØ¸Ø§Ø¦Ù
       =============================== */
    setTimeout(relocateAccordion, 600);
    setTimeout(closeAccordionsOnLoad, 500);
    addLogoToDescription();

    /* ===============================
       Ù…Ø±Ø§Ù‚Ø¨Ø© DOM (Ù„Ù€ React / SPA)
       =============================== */
    const observer = new MutationObserver(() => {
        relocateAccordion();
        closeAccordionsOnLoad();
        addLogoToDescription();
    });

    observer.observe(document.body, {
        childList: true,
        subtree: true
    });

});
</script>
